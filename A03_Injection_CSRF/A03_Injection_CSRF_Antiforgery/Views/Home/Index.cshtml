@{
    ViewData["Title"] = "Demonstracja CSRF";
}

<div class="container mt-5">

    <div class="row mb-4">
        <div class="col-md-6">
            <h3>Formularz bezpieczny</h3>
            <form asp-action="Submit" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <input type="text" name="message" class="form-control" placeholder="Wiadomość (secure)" />
                </div>
                <button type="submit" class="btn btn-success">Wyślij</button>
            </form>

            @if (ViewBag.Response != null)
            {
                <div class="alert alert-success mt-2">
                    @ViewBag.Response
                </div>
            }
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-6">
            <h3>Formularz podatny</h3>
            <form asp-action="SubmitVulnerable" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <input type="text" name="message" class="form-control border-danger" placeholder="Wiadomość (vulnerable)" />
                </div>
                <button type="submit" class="btn btn-danger">Wyślij</button>
            </form>

            @if (ViewBag.VulnerableResponse != null)
            {
                <div class="alert alert-danger mt-2">
                    @ViewBag.VulnerableResponse
                </div>
            }
        </div>
    </div>
</div>
